<div class="city_signers-container">
    <p>Here are all the people in {{city}} who signed for this great cause:</p>
    <ul>
        {{#signers}}
        <li>
            {{#if url}}
                <a href={{url}} target="_blank">{{first}} {{last}}</a> &nbsp;
            {{else}}
                {{first}} {{last}} &nbsp;
            {{/if}}

            {{#if age}}    
                {{age}}
            {{/if}}
        </li>
        {{/signers}}
    </ul>
</div>